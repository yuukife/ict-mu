<p id="notice"><%= notice %></p>

<h1>Listing Contatos</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Andress</th>
      <th>Phone</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contatos.each do |contato| %>
      <tr>
        <td><%= contato.name %></td>
        <td><%= contato.andress %></td>
        <td><%= contato.phone %></td>
        <td><%= contato.description %></td>
        <td><%= link_to 'Show', contato %></td>
        <td><%= link_to 'Edit', edit_contato_path(contato) %></td>
        <td><%= link_to 'Destroy', contato, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

